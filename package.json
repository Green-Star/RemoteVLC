{
  "name": "RemoteVLC",
  "description": "A simple web interface to control VLC on a remote device",
  "version": "0.0.1",
  "private": true,
  "licence": "GPLv3",
  "engines": {
    "node": ">=10.x"
  },
  "scripts": {
    "build-all": "npm run build-server && npm run build-client",
    "build-server": "tsc",
    "build-client": "cd client; npm run build;",
    "start": "node dist/server/server.js",
    "test": "NODE_ENV='test' mocha -r ts-node/register --bail ./server/test/index.ts",
    "code-coverage": "NODE_ENV='test' nyc mocha -r ts-node/register -r source-map-support/register --bail ./server/test/index.ts"
  },
  "nyc": {
    "include": [
      "server/**/*.ts"
    ],
    "exclude": [
      "server/test/*"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "express": "^4.16.3",
    "method-override": "^2.3.10",
    "mkdirp": "^0.5.1",
    "morgan": "^1.9.0",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/express": "^4.0.35",
    "@types/method-override": "0.0.31",
    "@types/mkdirp": "^0.5.2",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.0.8",
    "@types/winston": "^2.3.9",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "mocha-typescript": "^1.1.17",
    "nyc": "^13.1.0",
    "sinon": "^7.0.0",
    "source-map-support": "^0.5.10",
    "supertest": "^3.1.0",
    "ts-node": "^7.0.1",
    "typescript": "~2.7.2"
  }
}
